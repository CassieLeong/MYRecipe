<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.MYRecipe"
    tools:showIn="@layout/activity_myrecipe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   Malaysian Cuisine              "
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:background="#f37772"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@mipmap/pork"
        android:clickable="true"
        android:onClick="ChickenRecipe"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="450dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/fish"
        android:clickable="true"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/imageButton"
        android:onClick="SeafoodRecipe" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="450dp"
        android:id="@+id/imageButton3"
        android:src="@mipmap/vege1"
        android:clickable="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  &quot;Where The Home Is&quot;"
        android:id="@+id/textView2"
        android:editable="true"
        android:elegantTextHeight="true"
        android:textColor="#F02"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual Tour to Malaysia"
        android:id="@+id/button"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textColor="#F098"
        android:onClick="OnTour"
        android:contextClickable="true"
        android:nestedScrollingEnabled="false"
        android:textSize="18dp" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton12"
        android:src="@mipmap/snack"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="   Meat      "
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:background="#f5c0c0"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seafood     "
        android:textStyle="bold"
        android:id="@+id/textView7"
        android:autoText="false"
        android:background="#f5c0c0"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Vegie   "
        android:textStyle="bold"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#f5c0c0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" Snack     "
        android:textStyle="bold"
        android:background="#f5c0c0"
        android:id="@+id/textView9"
        android:textIsSelectable="false"
        android:textSize="22dp"
        android:textColor="#070707"
        android:layout_alignTop="@+id/imageButton12"
        android:layout_toEndOf="@+id/textView8" />


</RelativeLayout>
