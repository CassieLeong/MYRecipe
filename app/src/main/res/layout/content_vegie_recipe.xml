<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.VegieRecipe"
    tools:showIn="@layout/activity_vegie_recipe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView53"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#e4dfdf"
        android:text="          Vegetable Recipes  "
        android:background="#f90818"
        android:textStyle="bold"
        android:textSize="25dp" />

    <ScrollView
        android:visibility ="visible"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/scrollView17"
        android:layout_below="@+id/textView53"
        android:layout_alignParentStart="true"
        android:fillViewport="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vegetarian Oyster Sauce Broccoli                                     "
            android:id="@+id/textView55"
            android:layout_below="@+id/scrollView17"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton22"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView55"
            android:src="@mipmap/brocolli"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:onClick="VegetarianOysterSauceBroccoli" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Eggplant Salad                                     "
            android:id="@+id/textView56"
            android:layout_below="@+id/imageButton22"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton23"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView56"
            android:src="@mipmap/eggplant"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Acar                                     "
            android:id="@+id/textView54"
            android:layout_below="@+id/scrollView17"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton21"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView54"
            android:src="@mipmap/acar"
            android:clickable="true"
            android:onClick="AcarVegie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sambal Kang kong                                     "
            android:id="@+id/textView57"
            android:layout_below="@+id/imageButton21"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton24"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView54"
            android:src="@mipmap/kangkong"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Trio Eggs Spinach with Superior Soup        "
            android:id="@+id/textView58"
            android:layout_below="@+id/imageButton24"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton25"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView58"
            android:src="@mipmap/spinach"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Simmered Potato                                     "
        android:id="@+id/textView59"
        android:layout_below="@+id/imageButton25"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:scrollbarStyle="insideOverlay"
            android:isScrollContainer="true"
            android:fadeScrollbars="true"
            android:keepScreenOn="true"
            android:fadingEdge="vertical"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentStart="true"
            android:layout_height="80dp"
            android:id="@+id/imageButton26"
            android:scrollbars="vertical"
            android:layout_below="@+id/textView59"
            android:src="@mipmap/potato"
            android:clickable="true"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
    </ScrollView>


</RelativeLayout>
