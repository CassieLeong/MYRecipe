<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.EggplantSalad"
    tools:showIn="@layout/activity_eggplant_salad">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eggplant Salad                     "
        android:id="@+id/textView61"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#f6d3d2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView9"
        android:layout_below="@+id/textView61"
        android:layout_alignParentStart="true"
        android:src="@mipmap/eggplant"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignWithParentIfMissing="true"
        android:isScrollContainer="true"
        android:fadeScrollbars="true"
        android:keepScreenOn="true"
        android:fadingEdge="vertical"
        android:background="#0c0c0c"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:visibility ="visible"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/scrollView19"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:fillViewport="false" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients :
            \n\t\t300g Eggplant
            \n\t\t1Tbs Lemon Juice
            \n\nSeasoning Ingredients :
            \n\t\t1/2Tsp Salt
            \n\t\t1/2Tsp Black Pepper
            \n\t\t1/2Tsp Chili Powder
            \n\nMethod :
            \n\n\t\t1) Clean and cut the eggplant in 0.5cm thick.
            \n\n\t\t2) Mix well the seasoning with lemon juice.
            \n\n\t\t3) Pan fried the enggplant in both surface until golden.
            \n\n\t\t4) Spread the seasoning sauce over the eggplant."
            android:id="@+id/textView62"
            android:textSize="20sp"
            android:background="#e4e0e0"
            android:layout_alignTop="@+id/scrollView19"
            android:layout_alignParentStart="true" />

    </ScrollView>

</RelativeLayout>
