<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.SoySauceChicken"
    tools:showIn="@layout/activity_soy_sauce_chicken">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Soy Sauce Chicken                               "
        android:id="@+id/textView29"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#f6d3d2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView7"
        android:layout_below="@+id/textView29"
        android:layout_alignParentStart="true"
        android:src="@mipmap/jiangyouji"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignWithParentIfMissing="true"
        android:isScrollContainer="true"
        android:fadeScrollbars="true"
        android:keepScreenOn="true"
        android:fadingEdge="vertical"
        android:background="#0c0c0c"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView9"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Ingredients :
            \n\t\t1 Whole Chicken
            \n\t\t7 Slices Ginger
            \n\t\t1 Whole Garlic
            \n\t\tWater (Enough to cover the chicken in the pot)
            \n\nMarinate Ingredients :
            \n\t\t1 1/2Tbs Salt
            \n\t\t2 Tsp White Pepper
            \n\t\t1 Tbs Five Spice Powder
            \n\nSeasoning Ingredients :
            \n\t\t1/2 Cup Soy Sauce
            \n\t\t6Tbs Sugar
            \n\t\t4Tbs Oyster Sauce
            \n\t\t5Tbs Dark Soy Sauce
            \n\t\t4Tbs Chinese Wine(Hua Tiao)
            \n\t\t1/2Tbs Sesame Oil
            \n\nMethod :
            \n\n\t\t1) Marinate the chicken overnight.
            \n\n\t\t2) Boil the water and add the seasoning.
            \n\n\t\t3) Simmer the chicken until cook."
            android:id="@+id/textView30"
            android:layout_below="@+id/scrollView9"
            android:layout_toEndOf="@+id/textView29"
            android:textSize="20sp"
            android:background="#e4e0e0" />

    </ScrollView>


</RelativeLayout>
