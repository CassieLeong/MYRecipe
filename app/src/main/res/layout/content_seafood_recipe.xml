<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.SeafoodRecipe"
    tools:showIn="@layout/activity_seafood_recipe">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView31"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#e4dfdf"
        android:text="           Seafood Recipe  "
        android:background="#f90818"
        android:textStyle="bold"
        android:textSize="25dp" />

    // scrollview for imagebutton, you need a linear layout to suppor unlike textview, make write the code in java too.
    <ScrollView
        android:visibility ="visible"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/scrollView10"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true"
        android:fillViewport="false" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sweet and Sour Fish with Lychee"
                android:id="@+id/textView32" />

            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:layout_alignParentStart="true"
                android:layout_height="80dp"
                android:id="@+id/imageButton13"
                android:scrollbars="vertical"
                android:layout_below="@+id/scrollView10"
                android:layout_toEndOf="@+id/scrollView10"
                android:src="@mipmap/lyceefish"
                android:clickable="true"
                android:layout_weight="1.60"
                android:layout_gravity="center_horizontal"
                android:onClick="SweetSourFish" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Teochew Steamed Fish"
                android:id="@+id/textView33" />

            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:scrollbars="vertical"
                android:layout_height="80dp"
                android:id="@+id/imageButton14"
                android:layout_below="@+id/imageButton13"
                android:layout_toEndOf="@+id/imageButton13"
                android:src="@mipmap/teochew_steamed"
                android:layout_gravity="center_horizontal"
                android:onClick="TeochewSteamed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Deep Fried Honey Baby Squids                                                           "
                android:id="@+id/textView38" />

            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:scrollbars="vertical"
                android:layout_height="80dp"
                android:id="@+id/imageButton19"
                android:layout_below="@+id/imageButton18"
                android:layout_toEndOf="@+id/imageButton18"
                android:src="@mipmap/honey_baby_squids"
                android:layout_gravity="center_horizontal"
                android:onClick="BabySquids" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Asam Prawn"
                android:id="@+id/textView35" />

            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:scrollbars="vertical"
                android:layout_height="80dp"
                android:id="@+id/imageButton16"
                android:layout_below="@+id/imageButton18"
                android:layout_toEndOf="@+id/imageButton18"
                android:src="@mipmap/asamprawn"
                android:onClick="AsamPrawn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Five Spice Calamari with Wasabi Mayo                                                          "
                android:id="@+id/textView36" />

            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:scrollbars="vertical"
                android:layout_height="80dp"
                android:id="@+id/imageButton17"
                android:layout_below="@+id/imageButton16"
                android:layout_toEndOf="@+id/imageButton16"
                android:src="@mipmap/calamari"
                android:onClick="Calamari" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Steamed Garlic Prawns                                                            "
                android:id="@+id/textView37" />


            <ImageButton
                android:layout_width="wrap_content"
                android:scrollbarStyle="insideOverlay"
                android:isScrollContainer="true"
                android:fadeScrollbars="true"
                android:keepScreenOn="true"
                android:fadingEdge="vertical"
                android:nestedScrollingEnabled="true"
                android:clickable="true"
                android:layout_alignParentStart="true"
                android:scrollbars="vertical"
                android:layout_height="80dp"
                android:id="@+id/imageButton18"
                android:layout_below="@+id/imageButton17"
                android:layout_toEndOf="@+id/imageButton17"
                android:src="@mipmap/garlic_prawn"
                android:onClick="GarlicPrawn" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
