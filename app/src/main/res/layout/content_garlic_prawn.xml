<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.GarlicPrawn"
    tools:showIn="@layout/activity_garlic_prawn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Steamed Garlic Prawns                     "
        android:id="@+id/textView48"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#f6d3d2" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_view5"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21" />

    </LinearLayout>

    <ScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView15"
        android:layout_marginTop="320dp"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients :
            \n\t\t10-12 large prawns
            \n\t\tchopped spring onions for garnish
            \n\nsauce :
            \n\t\t4 tbsp chicken stock
            \n\t\t1 tbsp light soy sauce
            \n\t\t1 tbsp hua tiao wine (optional)
            \n\t\t1 tbsp sesame oil (adjust to taste)
            \n\t\t½ tsp salt
            \n\t\t1 tbsp minced ginger
            \n\t\t2 tbsp minced garlic
            \n\t\t1 tbsp chopped spring onions
            \n\nSteps :
            \n\n\t\tGarlic sauce add 4 tbsp chicken stock with,
            \n\n\t\t1 tbsp light soy sauce,
            \n\n\t\t1 tbsp hua tiao wine (optional),
            \n\n\t\t1 tbsp sesame oil (adjust to taste),
            \n\n\t\t½ tsp salt,
            \n\n\t\t1 tbsp minced ginger,
            \n\n\t\t2 tbsp minced garlic,
            \n\n\t\t1 tbsp chopped spring onions
            \n\n\t\tMix well and set aside
            \n\n\t\tMake a slit in the back of 10-12 large prawns, and devein them leaving the shells on
            \n\n\t\tLay them out on a steaming tray slit side up
            \n\n\t\tAdd garlic sauce to prawns
            \n\n\t\tSteam prawns for 3-5 mins (depending on size)
            \n\n\t\tOnce done, scatter chopped spring onions over the prawns
            "
            android:id="@+id/textView49"
            android:textSize="20sp"
            android:background="#e4e0e0"
            android:layout_below="@+id/scrollView15"
            android:layout_alignParentStart="true" />

    </ScrollView>

</RelativeLayout>
