<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cassieleong.myrecipe.SaltyBeanPork"
    tools:showIn="@layout/activity_salty_bean_pork">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salty Bean Pork                         "
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="#f6d3d2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:src="@mipmap/xiandoujiangmenhuarou"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignWithParentIfMissing="true"
        android:isScrollContainer="true"
        android:fadeScrollbars="true"
        android:keepScreenOn="true"
        android:fadingEdge="vertical"
        android:background="#0c0c0c"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Ingredients :
            \n   600g Pork Belly (Cut off the pork skin and cut into cube size)
            \n   1Tbs Salty Bean Paste
            \n   2Tbs Oil
            \n   1/2 Tbs Minced Garlic
            \n   2Tsp Corn Starch + 3Tbs Water (Mix)
            \n\nSeasoning Ingredients :
            \n   3Tbs Soy Sauce
            \n   1Tbs Dark Soy Sauce
            \n   1Tbs Sweet Doy Sauce
            \n   1/3 Cup Water
            \n   1Tbs Sugar
            \n\nMethod :
            \n\n   1) Use oil to stir fried garlic and salty bean paste until fragrant.
            \n\n   2) Add the pork belly then seasoning ingredients.
            \n\n   3) Let the meat simmers in medium heat until the sauce reduced.
            \n\n   4) Lastly, add the cornstarch mixed to the dish.
            \n\nCredit by: Yong Swee Ha"
            android:id="@+id/textView20"
            android:layout_below="@+id/scrollView5"
            android:layout_toEndOf="@+id/textView19"
            android:textSize="20sp"
            android:background="#e4e0e0" />

    </ScrollView>


</RelativeLayout>
